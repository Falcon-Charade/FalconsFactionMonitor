<Window x:Class="FalconsFactionMonitor.Windows.WebRetrievalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="WebService" 
        Height="480"
        Width="640"
        MinWidth="640"
        MinHeight="280">
    <Window.Background>
        <VisualBrush Stretch="Uniform">
            <VisualBrush.Visual>
                <MediaElement Source="Resources/MainBackground3.gif"/>
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0">
            <Viewbox Stretch="Uniform"
                     StretchDirection="Both"
                     MinWidth="400"
                     MaxWidth="800">
                <TextBlock TextAlignment="Center">
                    <Run Text="Welcome to Falcon's Web Retrieval. " Foreground="Blue"/>
                </TextBlock>
            </Viewbox>
            <Viewbox Stretch="Uniform"
                     StretchDirection="Both"
                     MinWidth="10"
                     MaxWidth="1000">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Check Inara for Faction Updates?"
                               FontWeight="Light"
                               Foreground="Magenta"
                               Grid.Row="0"
                               Grid.Column="0"/>
                    <CheckBox x:Name="InaraCheckBox"
                              IsChecked="False"
                              MinWidth="15"
                              MinHeight="15"
                               Grid.Row="0"
                              Grid.Column="1"
                              Margin="10,0,5,0"/>
                    <TextBlock Text="Save Data to CSV?" 
                               FontWeight="Light"
                               VerticalAlignment="Center"
                               Foreground="Magenta"
                               Grid.Row="1"
                               Grid.Column="0"/>
                    <Grid Grid.Row="1"
                          Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="CSVPathButton"
                            Content="Select CSV Save Path"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Black"
                            Foreground="White"
                            Margin="0,2,5,2"
                            Grid.Column="1"
                            Click="CSVPathButton_Click" />
                        <CheckBox x:Name="CSVCheckBox"
                              IsChecked="False"
                              VerticalAlignment="Center"
                              MinWidth="15"
                              MinHeight="15"
                              Grid.Column="0"
                              Margin="10,0,5,0"/>
                    </Grid>
                </Grid>
            </Viewbox>
            <Viewbox Stretch="Uniform"
                     StretchDirection="Both"
                     MinWidth="10"
                     MaxWidth="1000">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Faction to check: "
                               FontWeight="Light"
                               Foreground="Magenta"
                               Grid.Column="0"/>
                    <TextBox x:Name="FactionTextBox"
                             Text="Faction Name"
                             Grid.Column="1"
                             Width="200"
                             Margin="10,0,5,0"/>
                </Grid>
            </Viewbox>
            <Viewbox Stretch="Uniform"
                     StretchDirection="Both"
                     MinWidth="10"
                     MaxWidth="1000">
                <Button x:Name="StartWRServiceButton"
                        Content="Start Service"
                        HorizontalAlignment="Center"
                        Background="Black"
                        Opacity="50"
                        Foreground="White"
                        Width="400"
                        Height="30"
                        Margin="0,10,0,0"
                        Click="StartWRServiceButton_Click" />
            </Viewbox>
        </StackPanel>
        <RichTextBox x:Name="WebRetrievalOutputTextBlock"
                     FontSize="16"
                     Margin="0,5,0,0"
                     Background="Black"
                     Foreground="White"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Grid.Row="1"
                     IsReadOnly="True"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="OpenOutputButton"
                    Content="Open Output Directory"
                    HorizontalAlignment="Center"
                    Background="Black"
                    Foreground="White"
                    Width="200"
                    Height="30"
                    Margin="60,5,0,5"
                    Grid.Column="0"
                    Click="OpenOutputButton_Click" />
            <Button x:Name="ExitWRServiceButton"
                    Content="Exit Monitor Service"
                    HorizontalAlignment="Right"
                    Background="Black"
                    Foreground="White"
                    Width="200"
                    Height="30"
                    Margin="0,5,60,5"
                    Grid.Column="1"
                    Click="ExitWRServiceButton_Click" />
        </Grid>
    </Grid>
</Window>

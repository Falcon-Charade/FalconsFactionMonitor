<localbase:BaseWindow x:Class="FalconsFactionMonitor.Windows.WebRetrievalWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:localbase="clr-namespace:FalconsFactionMonitor.Helpers"
                      Title="{DynamicResource WebRetrieval_Title}"
                      Style="{StaticResource MaterialDesignWindow}"
                      Height="480"
                      Width="480"
                      MinWidth="480"
                      MinHeight="280">

    <!--<Window.Background>
        <SolidColorBrush Color="White" Opacity="1" />
    </Window.Background>-->

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <TextBlock Grid.Row="0"
                   Text="{DynamicResource WebRetrieval_Heading}"
                   AutomationProperties.Name="Web Retrieval Heading" />

        <!-- Content Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,0" >
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Label Content="{DynamicResource WebRetrieval_CheckInara}" Target="{Binding ElementName=InaraCheckBox}" />
                <CheckBox x:Name="InaraCheckBox" IsChecked="False" VerticalAlignment="Center" AutomationProperties.Name="Check Inara for updates" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Label Content="{DynamicResource WebRetrieval_SaveCSV}" Target="{Binding ElementName=CSVCheckBox}" />
                <CheckBox x:Name="CSVCheckBox" IsChecked="False" VerticalAlignment="Center" AutomationProperties.Name="Save data to CSV" />
                <Button x:Name="CSVPathButton"
                        Content="{DynamicResource WebRetrieval_Button_SetSave}"
                        Click="CSVPathButton_Click"
                        AutomationProperties.Name="Select CSV Save Path" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Label Content="{DynamicResource WebRetrieval_FactionCheck}" Target="{Binding ElementName=FactionTextBox}" />
                <TextBox x:Name="FactionTextBox" Text="{DynamicResource WebRetrieval_FactionPrefill}" Width="200" AutomationProperties.Name="Faction name input" />
            </StackPanel>

            <Button x:Name="StartWRServiceButton"
                    Content="{DynamicResource WebRetrieval_Button_StartService}"
                    Height="30"
                    HorizontalAlignment="Stretch"
                    Click="StartWRServiceButton_Click"
                    AutomationProperties.Name="Start Web Retrieval Service" />
        </StackPanel>

        <!-- Log Output Section -->
        <RichTextBox x:Name="WebRetrievalOutputTextBlock"
                     Grid.Row="2"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AutomationProperties.Name="Web Retrieval Output Log" />

        <!-- Footer Buttons -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="OpenOutputButton"
                    Content="{DynamicResource WebRetrieval_Button_OpenOutput}"
                    Grid.Column="0"
                    Width="200"
                    Height="30"
                    HorizontalAlignment="Center"
                    Click="OpenOutputButton_Click"
                    AutomationProperties.Name="Open output directory" />

            <Button x:Name="ExitWRServiceButton"
                    Content="{DynamicResource WebRetrieval_Button_Exit}"
                    Grid.Column="1"
                    Width="200"
                    Height="30"
                    HorizontalAlignment="Center"
                    Click="ExitWRServiceButton_Click"
                    AutomationProperties.Name="Exit Web Retrieval Service" />
        </Grid>
    </Grid>
</localbase:BaseWindow>

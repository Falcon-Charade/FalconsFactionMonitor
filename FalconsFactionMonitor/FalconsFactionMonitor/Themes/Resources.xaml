<!-- Resources.xaml: WCAG-compliant centralized styling for FalconsFactionMonitor -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Color Palette (Meets WCAG 2.0 AA) -->
	<Color x:Key="PrimaryBackgroundColor">#FF000000</Color>
	<!-- Black -->
	<Color x:Key="PrimaryForegroundColor">#FFFFFFFF</Color>
	<!-- White -->
	<Color x:Key="AccentColor">#FF00FFFF</Color>
	<!-- Magenta -->
	<Color x:Key="HighlightColor">#FF1E90FF</Color>
	<!-- DodgerBlue -->
	<Color x:Key="HeaderColor">#FF00BFFF</Color>
	<!-- DeepSkyBlue -->

	<!-- Brushes -->
	<SolidColorBrush x:Key="BrushBackground" Color="{StaticResource PrimaryBackgroundColor}"/>
	<SolidColorBrush x:Key="BrushForeground" Color="{StaticResource PrimaryForegroundColor}"/>
	<SolidColorBrush x:Key="BrushAccent" Color="{StaticResource AccentColor}"/>
	<SolidColorBrush x:Key="BrushHighlight" Color="{StaticResource HighlightColor}"/>
	<SolidColorBrush x:Key="BrushHeader" Color="{StaticResource HeaderColor}"/>

	<!-- Global Font Style -->
	<Style TargetType="TextBlock">
		<Setter Property="Foreground" Value="{StaticResource BrushForeground}"/>
		<Setter Property="FontSize" Value="16"/>
	</Style>

	<!-- Header TextBlock Style -->
	<Style x:Key="HeaderTextBlock" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{StaticResource BrushHeader}"/>
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="TextAlignment" Value="Center"/>
	</Style>

	<!-- Button Style -->
	<Style TargetType="Button">
		<Setter Property="Foreground" Value="{StaticResource BrushForeground}"/>
		<Setter Property="Background" Value="{StaticResource BrushBackground}"/>
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Margin" Value="5"/>
		<Setter Property="Padding" Value="8,4"/>
	</Style>

	<!-- CheckBox Style -->
	<Style TargetType="CheckBox">
		<Setter Property="Foreground" Value="{StaticResource BrushForeground}"/>
		<Setter Property="FontSize" Value="14"/>
	</Style>

	<!-- TextBox Style -->
	<Style TargetType="TextBox">
		<Setter Property="Foreground" Value="{StaticResource BrushForeground}"/>
		<Setter Property="Background" Value="{StaticResource BrushBackground}"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Margin" Value="5"/>
		<Setter Property="Padding" Value="4"/>
	</Style>

	<!-- RichTextBox Style -->
	<Style TargetType="RichTextBox">
		<Setter Property="Foreground" Value="{StaticResource BrushForeground}"/>
		<Setter Property="Background" Value="{StaticResource BrushBackground}"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Margin" Value="5"/>
	</Style>

</ResourceDictionary>
<Window x:Class="FalconsFactionMonitor.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Falcons Faction Monitor"
        Style="{StaticResource MaterialDesignWindow}"
        Height="200"
        Width="480"
        MinWidth="480"
        MinHeight="200">

    <!--<Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>-->

    <Window.Background>
        <SolidColorBrush Color="White" Opacity="1" />
        <!--<VisualBrush Stretch="UniformToFill">
            <VisualBrush.Visual>
                <MediaElement Source="Resources/MainBackground3.gif" />
            </VisualBrush.Visual>
        </VisualBrush>-->
    </Window.Background>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Welcome to Falcon's Faction Monitor."
                   FontWeight="Bold"
                   FontSize="20"
                   TextWrapping="Wrap"
                   AutomationProperties.Name="Main heading"
                   Margin="0,0,0,0" />
        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Center"
                   Text="Click a button below to launch the relevant service."
                   AutomationProperties.Name="Service selection heading"
                   Margin="0,10,0,10" />

        <!-- Service Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button x:Name="JournalMonitorServiceButton"
                    Content="Journal Monitor Service"
                    Width="200"
                    Height="30"
                    Margin="0,0,20,0"
                    Click="JournalMonitorServiceButton_Click"
                    AutomationProperties.Name="Launch Journal Monitor Service" />

            <Button x:Name="WebRetrievalServiceButton"
                    Content="Web Retrieval Service"
                    Width="200"
                    Height="30"
                    Click="WebRetrievalServiceButton_Click"
                    AutomationProperties.Name="Launch Web Retrieval Service" />
        </StackPanel>

        <!-- Output Log -->
        <RichTextBox x:Name="ResultTextBlock"
                     Grid.Row="3"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AutomationProperties.Name="Main Window Output Log" />

        <!-- Exit Button -->
        <Button x:Name="ExitButton"
                Content="Exit"
                Grid.Row="4"
                Width="200"
                Height="30"
                HorizontalAlignment="Center"
                Click="ExitButton_Click"
                AutomationProperties.Name="Exit Program Button" />
    </Grid>
</Window>
<Window x:Class="FalconsFactionMonitor.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Falcons Faction Monitor"
        Height="480"
        Width="640"
        MinWidth="640"
        MinHeight="280">
    <Window.Background>
        <VisualBrush Stretch="UniformToFill">
            <VisualBrush.Visual>
                <MediaElement Source="Resources/MainBackground3.gif"/>
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Viewbox Stretch="Uniform"
                     StretchDirection="Both"
                     MinWidth="400"
                     MaxWidth="800">
                <TextBlock TextAlignment="Center">
                    <Run Text="Welcome to Falcon's Faction Monitor. " Foreground="Blue"/>
                    <LineBreak/>
                    <Run Text="Click a button below to launch the relevant service." Foreground="Magenta"/>
                </TextBlock>
            </Viewbox>
            <Viewbox Stretch="Uniform"
                     StretchDirection="Both"
                     MinWidth="400"
                     MaxWidth="800">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="JournalMonitorServiceButton"
                            Content="Journal Monitor Service"
                            HorizontalAlignment="Left"
                            Background="Black"
                            Opacity="50"
                            Foreground="White"
                            Width="200"
                            Height="30"
                            Margin="0,10,0,0"
                            Click="JournalMonitorServiceButton_Click" />

                    <Button x:Name="WebRetrievalServiceButton"
                    Content="Web Retrieval Service"
                    HorizontalAlignment="Right"
                    Background="Black"
                    Foreground="White"
                    Width="200"
                    Height="30"
                    Margin="100,10,0,0"
                    Click="WebRetrievalServiceButton_Click" />
                </StackPanel>
            </Viewbox>
        </StackPanel>
        <RichTextBox x:Name="ResultTextBlock"
                     FontSize="16"
                     Margin="0,5,0,0"
                     Background="Black"
                     Foreground="White"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Grid.Row="1"
                     IsReadOnly="True"/>
        <Button x:Name="ExitButton"
                Content="Exit"
                HorizontalAlignment="Center"
                Background="Black"
                Foreground="White"
                Width="200"
                Height="30"
                Margin="0,10,0,0"
                Grid.Row="2"
                Click="ExitButton_Click" />
    </Grid>
</Window>

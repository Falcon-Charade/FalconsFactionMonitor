<Window x:Class="FalconsFactionMonitor.Windows.WebRetrievalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WebService"
        Height="480"
        Width="480"
        MinWidth="480"
        MinHeight="280">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Background>
        <VisualBrush Stretch="Uniform">
            <VisualBrush.Visual>
                <MediaElement Source="Resources/MainBackground3.gif" />
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <TextBlock Grid.Row="0"
                   Text="Welcome to Falcon's Web Retrieval."
                   Style="{StaticResource HeaderTextBlock}"
                   AutomationProperties.Name="Web Retrieval Heading" />

        <!-- Content Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,0" >
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Label Content="Check Inara for Faction Updates?" Target="{Binding ElementName=InaraCheckBox}" />
                <CheckBox x:Name="InaraCheckBox" IsChecked="False" VerticalAlignment="Center" AutomationProperties.Name="Check Inara for updates" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Label Content="Save Data to CSV?" Target="{Binding ElementName=CSVCheckBox}" />
                <CheckBox x:Name="CSVCheckBox" IsChecked="False" VerticalAlignment="Center" AutomationProperties.Name="Save data to CSV" />
                <Button x:Name="CSVPathButton"
                        Content="Select CSV Save Path"
                        Click="CSVPathButton_Click"
                        AutomationProperties.Name="Select CSV Save Path" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Label Content="Faction to check:" Target="{Binding ElementName=FactionTextBox}" />
                <TextBox x:Name="FactionTextBox" Text="Faction Name" Width="200" AutomationProperties.Name="Faction name input" />
            </StackPanel>

            <Button x:Name="StartWRServiceButton"
                    Content="Start Service"
                    Height="30"
                    HorizontalAlignment="Stretch"
                    Click="StartWRServiceButton_Click"
                    AutomationProperties.Name="Start Web Retrieval Service" />
        </StackPanel>

        <!-- Log Output Section -->
        <RichTextBox x:Name="WebRetrievalOutputTextBlock"
                     Grid.Row="2"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AutomationProperties.Name="Web Retrieval Output Log" />

        <!-- Footer Buttons -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="OpenOutputButton"
                    Content="Open Output Directory"
                    Grid.Column="0"
                    Width="200"
                    Height="30"
                    HorizontalAlignment="Center"
                    Click="OpenOutputButton_Click"
                    AutomationProperties.Name="Open output directory" />

            <Button x:Name="ExitWRServiceButton"
                    Content="Exit Monitor Service"
                    Grid.Column="1"
                    Width="200"
                    Height="30"
                    HorizontalAlignment="Center"
                    Click="ExitWRServiceButton_Click"
                    AutomationProperties.Name="Exit Web Retrieval Service" />
        </Grid>
    </Grid>
</Window>
